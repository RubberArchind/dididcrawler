{
	"info": {
		"_postman_id": "1234567-89ab-cdef-0123-456789abcdef",
		"name": "DIDID Crawler",
		"description": "API collection for testing DIDID Crawler payment and transaction endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\",\n    \"password\": \"{{password}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/login",
							"host": ["{{base_url}}"],
							"path": ["login"]
						},
						"description": "Authenticate user and get session cookie"
					}
				}
			]
		},
		{
			"name": "SuperAdmin",
			"item": [
				{
					"name": "List All Payments",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/superadmin/payments",
							"host": ["{{base_url}}"],
							"path": ["superadmin", "payments"]
						}
					}
				},
				{
					"name": "Mark Payment as Paid",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"paid_amount\": 1000.00,\n    \"notes\": \"Payment received via bank transfer\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/superadmin/payments/{{payment_id}}/pay",
							"host": ["{{base_url}}"],
							"path": ["superadmin", "payments", "{{payment_id}}", "pay"]
						}
					}
				},
				{
					"name": "Update Fee Settings",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"fee_percentage\": 2.5,\n    \"minimum_fee\": 1000,\n    \"maximum_fee\": 10000\n}"
						},
						"url": {
							"raw": "{{base_url}}/superadmin/settings",
							"host": ["{{base_url}}"],
							"path": ["superadmin", "settings"]
						}
					}
				}
			]
		},
		{
			"name": "User Dashboard",
			"item": [
				{
					"name": "Get User Payments",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/user/payments",
							"host": ["{{base_url}}"],
							"path": ["user", "payments"]
						}
					}
				}
			]
		},
		{
			"name": "Webhook",
			"item": [
				{
					"name": "Payment Webhook",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"transaction_id\": \"TR123456789\",\n    \"order_id\": \"ORD123456\",\n    \"status\": \"success\",\n    \"amount\": 50000.00,\n    \"payment_method\": \"bank_transfer\",\n    \"paid_at\": \"2025-10-04T10:00:00Z\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/webhook/payment",
							"host": ["{{base_url}}"],
							"path": ["webhook", "payment"]
						}
					}
				}
			]
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "email",
			"value": "admin@example.com",
			"type": "string"
		},
		{
			"key": "password",
			"value": "your_password",
			"type": "string"
		},
		{
			"key": "payment_id",
			"value": "1",
			"type": "string"
		}
	]
}